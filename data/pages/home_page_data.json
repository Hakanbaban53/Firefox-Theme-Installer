{
  "additional_settings": {
    "animation_speed": 100,
    "default_language": "en"
  },

  "data_paths": {
    "ASSETS_PATH": "assets",
    "NAVIGATION_BUTTON_DATA_PATH": "data/components/navigation_button_data.json",
    "OS_PROPERTIES_PATH": "data/OS data/os_properties.json",
    "CACHE_PATH": "~/.cache/Firefox Theme Installer/",
    "THEME_PATH": "themes/",
    "CUSTOM_SCRIPT_LOADER_URL": "https://raw.githubusercontent.com/Hakanbaban53/RealFire-Installer/main/data/files%20data/fx-autoconfig.json",
    "CUSTOM_SCRIPT_LOADER_PATH": "data/fx-autoconfig.json"
  },

  "icons": {
    "attention_icon": "icons/attention.png",
    "check_icon": "icons/check.png",
    "install_files_icon": "icons/install_icon.png",
    "theme_not_selected_icon": "icons/theme-not-selected.png",
    "theme_selected_icon": "icons/theme-selected.png",
    "header_title_bg": "backgrounds/header_title_background.png",
    "line_top_img": "backgrounds/line_top.png",
    "reload_icon": "icons/reload_icon.png",
    "remove_icon": "icons/remove_icon.png",
    "exit_icon": "icons/exit_icon.png",
    "block_spin_gif": "icons/block_spin.gif"
  },

  "header_data": {
    "text":"Welcome to the Theme Installer"
  },

  "create_os_info": {
    "os_label": {
      "text": "Detected Operating System: ",
      "text_color": "white",
      "font": "(\"Inter\", 20, \"bold\")",
      "grid_data": {
        "row": 2,
        "column": 0,
        "sticky": "ew",
        "padx": [175, 0],
        "pady": 20
      }
    },
    "os_frame": {
      "fg_color": "white",
      "corner_radius": "12",
      "border_width": 0,
      "border_color": "None",
      "grid_data": {
        "row": 2,
        "column": 1,
        "sticky": "ew",
        "padx": [0, 185],
        "pady": 0
      }
    },
    "os_info_label": {
      "font": "(\"Arial\", 20, \"bold\")",
      "compound": "right",
      "pack_data": {
        "side": "left",
        "padx": 10,
        "pady": 10
      }
    }
  },

  "theme_select": {
    "theme_frame": {
      "fg_color": "white",
      "corner_radius": "12",
      "border_width": 4,
      "border_color": "#771D76",
      "grid_data": {
        "row": 3,
        "column": 0,
        "columnspan": 2,
        "sticky": "",
        "padx": 0,
        "pady": [10, 35]
      }
    },
    "theme_label": {
      "text": "Select Theme: None",
      "font": "(\"Inter\", 18)",
      "fg_color": "Black",
      "pack_data": {
        "side": "left",
        "padx": 10,
        "pady": 10
      }
    },
    "theme_select_button": {
      "text": "Select Theme",
      "pack_data": {
        "side": "right",
        "padx": 10,
        "pady": 10
      }
    }
  },

  "create_navigation_buttons": {
    "select_action_label": {
      "text": "Please Select the Action",
      "text_color": "white",
      "font": "(\"Inter\", 20, \"bold\")",
      "grid_data": {
        "row": 4,
        "column": 0,
        "columnspan": 2,
        "sticky": "ew",
        "padx": 60,
        "pady": [0, 15]
      }
    },
    "navigation_frame": {
      "width": 460,
      "height": 54,
      "corner_radius": 12,
      "border_width": 4,
      "fg_color": "white",
      "border_color": "#F89F24",
      "grid_data": {
        "row": 5,
        "column": 0,
        "columnspan": 2,
        "sticky": "",
        "padx": 0,
        "pady": [0, 15]
      }
    }
  },

  "create_file_detection": {
    "detect_files_frame": {
      "corner_radius": 12,
      "fg_color": "white",
      "border_width": 0,
      "border_color": "None",
      "grid_data": {
        "row": 6,
        "column": 0,
        "columnspan": 2,
        "sticky": "",
        "padx": 0,
        "pady": 0
      }
    },
    "detect_files_text": {
      "parent": "detect_files_frame",
      "text": "Please Select theme ",
      "fg": "#000000",
      "bg": "#FFFFFF",
      "font": "(\"Arial\", 16, \"bold\")",
      "compound": "right",
      "grid_data": {
        "row": 0,
        "column": 0,
        "padx": 10,
        "pady": 10,
        "sticky": ""
      }
    },
    "install_files_button": {
      "text": "Show Files",
      "width": 120,
      "height": 40,
      "corner_radius": 14,
      "fg_color": "#E0E0E0",
      "hover_color": "#D0D0D0",
      "text_color": "#000000",
      "font": "(\"Arial\", 18, \"bold\")"
    }
  },

  "create_recheck_skip_section": {
    "recheck_skip_frame": {
      "fg_color": "#2B2631",
      "grid_data": {
        "row": 7,
        "column": 0,
        "columnspan": 2,
        "sticky": "",
        "padx": 0,
        "pady": 0
      }
    },
    "clean_install_checkbox": {
      "text": "Clean Install",
      "text_color": "#FFFFFF",
      "font": "(\"Arial\", 16, \"bold\")",
      "onvalue": true,
      "offvalue": false
    },
    "recheck_button": {
      "width": 40,
      "height": 40,
      "text": "",
      "fg_color": "#FFFFFF",
      "image": "reload_icon"
    }
  },
  "update_ui_for_selected_theme": {
    "detect_files_text": {
      "text": "Theme Selected",
      "fg": "#000000"
    },
    "theme_label": {
      "text": "Selected Theme: "
    },
    "install_files_button": {
      "text": "Install Theme",
      "state": "normal",
      "text_color": "#000000",
      "grid_data": {
        "pady": 10
      }
    },
    "clean_install": {
      "grid_data": {
        "row": 7,
        "column": 0,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    },
    "install_button": {
      "state": "disabled"
    }
  },
  "handle_data_json_theme": {
    "detect_files_text": {
      "text": "Theme has its own data JSON",
      "fg": "#00FF00"
    }
  },
  "handle_userChrome_theme": {
    "detect_files_text": {
      "text": "Theme has userChrome.css file",
      "fg": "#00FF00"
    },
    "install_button": {
      "state": "normal"
    },
    "recheck_button": {
      "state": "normal",
      "grid_data": {
        "row": 1,
        "column": 0,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    },
    "install_files_button": {
      "text": "Installed",
      "state": "disabled",
      "fg_color": "#D9D9D9",
      "width": 150,
      "text_color": "#000000"
    }
  },
  "no_theme_data_found": {
    "detect_files_text": {
      "text": "No theme data or chrome/userChrome.css found",
      "fg": "#FF0000"
    },
    "install_button": {
      "state": "disabled"
    },
    "install_files_button": {
      "text": "Installed",
      "state": "disabled",
      "fg_color": "#D9D9D9",
      "width": 150,
      "text_color": "#000000"
    }
  },
  "handle_all_files_installed": {
    "install_files_button": {
      "text": "All Files Installed",
      "text_color": "#10dc60",
      "state": "disabled",
      "width": 200
    },
    "install_button": {
      "state": "normal"
    },
    "recheck_button": {
      "grid_data": {
        "row": 7,
        "column": 1,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    }
  },
  "handle_missing_files": {
    "install_files_button": {
      "text": "Some Files Are Missing",
      "text_color": "#f04141",
      "width": 200,
      "state": "normal",
      "grid_data": {
        "row": 2,
        "column": 0,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    },
    "recheck_button": {
      "grid_data": {
        "row": 7,
        "column": 1,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    }
  },
  "refetch_files": {
    "install_files_button": {
      "text": "Fetching The Files",
      "text_color": "#000000",
      "state": "disabled"
    },
    "install_button": {
      "state": "disabled"
    }
  },
  "get_theme": {
    "install_files_button": {
      "text": "Installing Files",
      "text_color": "#000000",
      "state": "disabled"
    },
    "detect_files_text": {
      "text": "Installing Theme Files",
      "fg": "#000000"
    }
  },
  "get_neccessary_files": {
    "detect_files_text": {
      "text": "Getting Necessary Files",
      "fg": "#000000"
    }
  },
  "fetch_files": {
    "recheck_button": {
      "state": "normal",
      "grid_data": {
        "row": 7,
        "column": 1,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    }
  },
  "recheck_files": {
    "install_files_button": {
      "text": "Checking Files",
      "text_color": "#000000",
      "state": "disabled"
    },
    "install_button": {
      "state": "disabled"
    }
  },
  "handle_fetch_files_failure": {
    "install_files_button": {
      "text": "Failed to fetch files",
      "text_color": "#f04141",
      "state": "disabled"
    },
    "clean_install": {
      "grid_data": {
        "row": 7,
        "column": 0,
        "sticky": "",
        "padx": 10,
        "pady": 10
      }
    }
  }
}
